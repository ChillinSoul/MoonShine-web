<script>
  const navigate = (path: string) => {
    if (typeof window !== 'undefined') {
        window.location.href = path;
    }
};
  if (typeof window !== 'undefined') {
    window.addEventListener('load', () => {
      const user = sessionStorage.getItem('user');
      if (!user && window.location.pathname !== '/login') {
        navigate('/login');
      }
    });
  }
</script>

