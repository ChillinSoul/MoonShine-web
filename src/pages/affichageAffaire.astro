---
import Layout from '../layouts/Layout.astro'
import TopMenu from '../components/TopMenu.astro'
import Table from '../components/display/Table.astro'
import GqlTable from '../components/display/GraphQlTable'
import Bubble from '../components/ui/Bubble.astro'
const title = 'Affaire'
---

<Layout title={title} noTitle={false}>

  <Bubble cls="items-center m-40 h-[80vh] overflow-auto">
    <GqlTable query=`query Affaire {
      affaires {
        AFFAIRE
        CLIENT
        COLIS
        COMPTOIR
        DATE
        DECLARANT
        DESIGNATION
        FARDE
        GRP
      }
    }` endpoint='http://localhost:4000/graphql' 
    client:load
    />
</Bubble>
</Layout>

<style>
  .m-40 {
    margin: 20rem;
  }
  .items-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
