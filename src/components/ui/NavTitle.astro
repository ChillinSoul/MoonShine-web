    position: relative;
  }
  .animate::after {
    content: "";
    position: absolute;
    top: 1;
    left: 1;
    width: calc(100% - 2px);
    height: calc(100% - 2px);
    background: rgb(244,244,244);
    border-radius:calc( 0.25rem - 1px);
    z-index: -1;
  }
  .animate::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter:blur(2px);
    background: linear-gradient(45deg, #f3ec78, #af4261, #ee880b, #f9f514);
    background-size: 400% 400%;
    border-radius: 0.25rem;
    z-index: -2;
    animation: gradient 15s ease infinite;
  }
  .animate:hover::before {
    filter:blur(0);
    animation: gradient 1s ease infinite;
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @keyframes fadeIn {
    0% {
      opacity: 0.8;
    }
    100% {
      opacity: 1;
    }
  }
  
</style>
