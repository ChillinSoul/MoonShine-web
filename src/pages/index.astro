---
import Layout from '../layouts/Layout.astro'
import TopMenu from '../components/TopMenu.astro'
const title = 'The new Moonligtht!'
---

<Layout title={title} noTitle={true}>
  <div class="items-center h-full relative">
      <img src="/moon.webp" alt="Moon" class="div" />
      <p class="absolute hero gradiant-text">The new Moonligtht!</p>
      
  </div>
</Layout>

<style>
  .m-40 {
    margin: 20rem;
  }
  .items-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  img {
    border-radius: 50%;
    margin: auto;
    height: 500px;
  }
  .hero {
    font-size: 3rem;
    font-weight: bold;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    isolation: isolate;
  }
  .gradiant-text {
    background: linear-gradient(90deg, #ecc00f, #ffa200);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
