---
const { title, titles } = Astro.props
let hideMainNav = false
if (!title) {
  hideMainNav = true
}
const currentTitleIndex = titles.indexOf(title) ?? 0
const aCssString = `  text-2xl rounded font-bold p-2 h-full flex justify-center items-center hover:drop-shadow transition-all duration-300 text-slate-500`
const aCssStringActive = " animate drop-shadow-lg "
const aCssString1 = aCssString + (currentTitleIndex === 0 ? aCssStringActive : "")
const aCssString2 = aCssString + (currentTitleIndex === 1 ? aCssStringActive : "")
const aCssString3 = aCssString + (currentTitleIndex === 2 ? aCssStringActive : "")
---

<div
  class="flex w-full flex-col items-center justify-between h-[135px]"
>
  {
    title && !hideMainNav && (
      <div class="flex justify-center items-center bg-[rgb(244,244,244)] m-auto rounded drop-shadow m-auto">
        <a href={titles[0].toLowerCase()} class={aCssString1}>{titles[0]}</a>
        {titles.length > 1 ? <a href={titles[1].toLowerCase()} class={aCssString2}>{titles[1]}</a>:""}
        {titles.length > 2 ?<a href={titles[2].toLowerCase()} class={aCssString3}>{titles[2]}</a>:""}
      </div>
    )
  }
  </div>
</div>
